<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutMe">

    <TextView android:text="About Me" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toEndOf="@+id/textView"
        android:background="#fff8f7"
        android:layout_alignParentStart="true"
        android:id="@+id/grid">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Jacob WIllson"
            android:id="@+id/jacobButton"
            android:layout_below="@+id/fullmetalButton"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/fullmetalButton"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="101dp"
            android:layout_height="60dp"
            android:text="Pokemon"
            android:id="@+id/pokemonButton"
            android:layout_below="@+id/cookingButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Fullmetal"
            android:id="@+id/fullmetalButton"
            android:layout_below="@+id/dndButton"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/dndButton"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="133dp"
            android:layout_height="60dp"
            android:text="Cooking"
            android:id="@+id/cookingButton"
            android:layout_below="@+id/button6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="101dp"
            android:layout_height="60dp"
            android:text="D&amp;D"
            android:id="@+id/dndButton"
            android:layout_below="@+id/wrestlingButton"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/wrestlingButton"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Wrestling"
            android:id="@+id/wrestlingButton"
            android:layout_below="@+id/pokemonButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>
