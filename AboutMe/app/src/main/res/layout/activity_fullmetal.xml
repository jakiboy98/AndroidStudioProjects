<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jwil9706.aboutme.fullmetalActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageView"
        android:src="@drawable/fma2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullmetal Alchemist is a show about 2 brothers, who through a terrbile accident they lost their bodies. The show follows them as they try to get their bodies back, and as a result they uncover a plot that threatens the entire country."
        android:id="@+id/textView7"
        android:layout_below="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>
